    <link rel="stylesheet" href="/stylesheets/categories.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/navCategory.ejs') %>
        </div>

        <div class="row">
            <div class="container pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h3">Thêm thể loại</h1>
            </div>
        </div>
    </div>

    <form action="/categories/add" method="POST" class="mx-4">

        <div class="row form-group mb-4">
            <div class="col">
                <label for="name">Tên thể loại</label>
                <input type="text" class="form-control mt-2" id="name" name="name" value="" placeholder="Tên thể loại"
                    required>
            </div>
        </div>

        <div class="form-group mb-4">
            <button type="submit" class="btn btn-primary">Thêm thể loại</button>
        </div>
    </form>

    <%- include('../layouts/footer.ejs') %>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
